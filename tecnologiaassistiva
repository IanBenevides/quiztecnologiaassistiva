            },
            {
                scenario: "Ana vive perdendo suas chaves dentro de casa. Qual tecnologia a ajudaria a encontr√°-las rapidamente?",
                options: [
                    { text: "Assistente de Voz", icon: "üó£Ô∏è", id: "voz" },
                    { text: "Smartwatch", icon: "‚åö", id: "smartwatch" },
                    { text: "Localizador de Objetos", icon: "üîë", id: "localizador" },
                    { text: "App de Transporte", icon: "üöó", id: "transporte" }
                ],
                correct: "localizador",
                feedback: "Correto! Um localizador faz o chaveiro apitar, facilitando a busca."
            }
        ];

        const startScreen = document.getElementById('start-screen');
        const gameScreen = document.getElementById('game-screen');
        const endScreen = document.getElementById('end-screen');
        
        const startButton = document.getElementById('start-button');
        const restartButton = document.getElementById('restart-button');
        const nextButton = document.getElementById('next-button');

        const scenarioText = document.getElementById('scenario-text');
        const optionsGrid = document.getElementById('options-grid');
        const feedbackText = document.getElementById('feedback-text');
        
        const questionNumberEl = document.getElementById('question-number');
        const totalQuestionsEl = document.getElementById('total-questions');
        const scoreEl = document.getElementById('score');
        const finalScoreEl = document.getElementById('final-score');

        let currentScenarioIndex = 0;
        let score = 0;
        let answered = false;

        function startGame() {
            currentScenarioIndex = 0;
            score = 0;
            answered = false;
            
            startScreen.classList.add('hidden');
            endScreen.classList.add('hidden');
            gameScreen.classList.remove('hidden');
            
            totalQuestionsEl.textContent = scenarios.length;
            scoreEl.textContent = score;
            nextButton.classList.add('hidden');

            loadScenario();
        }

        function loadScenario() {
            answered = false;
            const currentScenario = scenarios[currentScenarioIndex];
            
            questionNumberEl.textContent = currentScenarioIndex + 1;
            scenarioText.textContent = currentScenario.scenario;
            optionsGrid.innerHTML = '';
            feedbackText.textContent = '';
            nextButton.classList.add('hidden');

            currentScenario.options.forEach(option => {
                const card = document.createElement('div');
                card.className = 'card bg-gray-50 border-2 border-gray-200 rounded-lg p-4 flex items-center space-x-4';
                card.dataset.id = option.id;
                card.innerHTML = `
                    <div class="text-3xl">${option.icon}</div>
                    <div class="font-semibold text-gray-700">${option.text}</div>
                `;
                card.addEventListener('click', selectOption);
                optionsGrid.appendChild(card);
            });
        }

        function selectOption(e) {
            if (answered) return;
            answered = true;

            const selectedCard = e.currentTarget;
            const selectedId = selectedCard.dataset.id;
            const correctId = scenarios[currentScenarioIndex].correct;

            if (selectedId === correctId) {
                score += 10;
                scoreEl.textContent = score;
                selectedCard.classList.add('correct');
                feedbackText.textContent = scenarios[currentScenarioIndex].feedback;
                feedbackText.classList.remove('text-red-600');
                feedbackText.classList.add('text-green-600');
            } else {
                selectedCard.classList.add('incorrect');
                feedbackText.textContent = "N√£o √© bem isso. Tente pensar em outra solu√ß√£o.";
                feedbackText.classList.remove('text-green-600');
                feedbackText.classList.add('text-red-600');
                
                // Mostra a resposta correta
                const correctCard = optionsGrid.querySelector(`[data-id="${correctId}"]`);
                correctCard.classList.add('correct');
            }

            nextButton.classList.remove('hidden');
            if (currentScenarioIndex === scenarios.length - 1) {
                nextButton.textContent = 'Finalizar';
            } else {
                nextButton.textContent = 'Pr√≥xima';
            }
        }

        function handleNext() {
            currentScenarioIndex++;
            if (currentScenarioIndex < scenarios.length) {
                loadScenario();
            } else {
                showEndScreen();
            }
        }

        function showEndScreen() {
            gameScreen.classList.add('hidden');
            endScreen.classList.remove('hidden');
            finalScoreEl.textContent = score;
        }

        startButton.addEventListener('click', startGame);
        restartButton.addEventListener('click', startGame);
        nextButton.addEventListener('click', handleNext);

    </script>
</body>
