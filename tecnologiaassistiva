                options: [
                    { text: "Localizador de Objetos", icon: "üîë", id: "localizador" },
                    { text: "Smartwatch com Detec√ß√£o de Queda", icon: "‚åö", id: "smartwatch" },
                    { text: "App de Entregas", icon: "üõçÔ∏è", id: "entregas" },
                    { text: "Videochamada", icon: "üìπ", id: "videochamada" }
                ],
                correct: "smartwatch",
